{
    "name": "express-errors-to-telegram",
    "description": "Express error handling middleware for reporting application errors to Telegram. Fully supports typescript.",
    "author": "Ilya Maslennikov (https://xrip.ru)",
    "bugs": {
        "url": "https://github.com/xrip/express-errors-to-telegram/issues"
    },
    "homepage": "https://github.com/xrip/express-errors-to-telegram",
    "version": "1.0.1",
    "license": "MIT",
    "keywords": [
        "errors",
        "handling",
        "telegram",
        "express",
        "typescript",
        "typescript-library"
    ],
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "tsc --declaration",
        "publish": "rimraf ./dist/ && yarn build && cp package.json ./dist/package.json && cp readme.md ./dist/readme.md && yarn publish ./dist/",
        "eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src/",
        "eslint:fix": "eslint --cache --fix --ext .js,.jsx,.ts,.tsx ./src/"
    },
    "peerDependencies": {
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/node": "^13.13.5",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "eslint": "^6.8.0",
        "eslint-plugin-optimize-regex": "^1.1.7",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-sonarjs": "^0.5.0",
        "express": "^4.17.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.7.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xrip/express-errors-to-telegram.git"
    }
}
